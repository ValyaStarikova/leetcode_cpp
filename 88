//https://leetcode.com/problems/merge-sorted-array/
class Solution {
public:
    //начинаем с конца массива
   void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
        int i = m - 1, j = n - 1, N = m + n - 1;//крайняя позиция нового массива
       bool fl=true;
		while ((N >= 0)&& fl) {
			if (j < 0) break;// когда массив 2 закончился остонавливаем цикл
			if ((i >= 0) && (nums1[i] > nums2[j])) //если больше то он перемещается в конец
				nums1[N--] = nums1[i--];//итератор массива из которого взяли элемент уменьшается,а тот из которого не взяли остается таким чтобы сравнивать этот элемент в дальнейшем , пожтому брейк сработает если не останется элементов к сравнению
			else nums1[N--] = nums2[j--];
		}
    }
};

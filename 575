//https://leetcode.com/problems/distribute-candies/
class Solution {
public:
    int distributeCandies(vector<int>& candies) {
        set <int> fl;
        
         for (auto i:candies){
             fl.insert(i);// используем множество для хранения видов конфет, так как в множестве элементы не повторяются
         }
        
        //нам нужно разделить конфеты ПОРОВНУ,если видов конфет большем,чем колво\2, то значитт некотореы представлены по одному разу ,значит сестра и брат не смогут получить конфеты одного вида в одном колве,поэтому все что нам остается просто разделить все конфеты поровну и дать им НО ТАК ЧТОБЫ ОНИ НЕ ВИДЕЛИ,ЧТО У НИХ РАХГЫЙ НАБОР,А ТО ОБИДЯТСЯ
        return min(candies.size()/2,fl.size());
    }
};
